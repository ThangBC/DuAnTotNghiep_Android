<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:padding="@dimen/_16sdp"
    tools:context=".PolicySupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity=""
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="left"
            android:background="#fff"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Chính sách và hỗ trợ"
            android:textSize="@dimen/_25ssp" />

        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/segoe_ui_bold"
                    android:id="@+id/textViewr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Chính sách và điều khoản của chúng tôi:"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textViewCCC"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:text="Bằng việc tạo tài khoản Poly Dating, dù thông qua thiết bị di động, ứng dụng di động hay máy tính (gọi chung là “Dịch vụ”),"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textViewC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Bạn đồng ý bị ràng buộc bởi các Điều khoản sử dụng về quyền riêng tư, cookie, thủ tục của chúng tôi (nếu áp dụng cho bạn), Lời khuyên An toàn và Nguyên tắc Cộng đồng, mỗi nội dung trên đều được đưa vào Thỏa thuận này theo hình thức tham chiếu và bất kỳ điều khoản nào mà bạn tiết lộ và đồng ý nếu bạn mua các tính năng, sản phẩm hoặc dịch vụ bổ sung mà chúng tôi cung cấp trên Dịch vụ (gọi chung là 'Thỏa thuận')."
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textViewCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Nếu bạn không chấp nhận và đồng ý bị ràng buộc bởi tất cả các điều khoản của Thỏa thuận này, vui lòng không sử dụng Dịch vụ."
                    android:textSize="@dimen/_15ssp" />


                <TextView
                    android:fontFamily="@font/segoe_ui_bold"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Bạn cần trợ giúp hay đóng góp ý tưởng về ứng dụng ?"
                    android:textSize="@dimen/_15ssp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLogoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/supportmale" />

                </LinearLayout>

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Nếu bạn gặp vấn đề nào đó cần chúng tôi hỗ trợ hoặc muốn đóng góp thêm ý tưởng về ứng dụng của chúng tôi, vui lòng gửi yêu cầu tới Poly Dating, chúng tôi luôn phục vụ trực tuyến 24/7"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="---"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Email: polydating@gmail.com"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Số điện thoại: 0949836711"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>