<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_13sdp"
    android:background="@drawable/corner_dialog_logout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_dialog_title_logout"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Trợ giúp và hỗ trợ"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtContentSp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textMultiLine"
        app:boxStrokeColor="#F5A343"
        app:boxStrokeErrorColor="#FF0000"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        app:endIconMode="clear_text"
        app:helperText="Yêu cầu*"
        app:helperTextTextColor="#FF0000"
        app:hintTextColor="#FF4500">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:lines="4"

            android:textSize="@dimen/_15ssp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@id/btnReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/cus_input"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Thêm ảnh"
            android:textSize="@dimen/_15ssp" />

        <ImageView
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/cus_btn7"
            android:src="@drawable/ic_baseline_upgrade_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgReport"
        android:layout_width="@dimen/_62sdp"
        android:layout_height="@dimen/_105sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_13sdp">

        <Button
            android:id="@+id/btnCancelSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/cus_btn8"
            android:backgroundTint="@null"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnSendSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/cus_btn7"
            android:text="Có"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="#f58114" />
    </LinearLayout>

</LinearLayout>