<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    tools:context=".UserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_460sdp">

                    <View
                        android:id="@+id/leftDetail"
                        android:layout_width="@dimen/_158sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start" />

                    <ImageView
                        android:id="@+id/imgUserDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="example_transition" />

                    <TextView
                        android:id="@+id/tvCountDetail"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="end"
                        android:background="@drawable/cus_bg4"
                        android:gravity="center"
                        android:text="0/0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_17ssp" />

                    <View
                        android:id="@+id/rightDetail"
                        android:layout_width="@dimen/_158sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right" />
                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/flatBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-30dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="-30dp"
                    android:elevation="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_refresh_24"
                    app:backgroundTint="#20A39E"
                    app:tint="@null" />

                <LinearLayout
                    android:id="@+id/ln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvNameDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:text="Họ và tên"
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_22ssp" />

                        <TextView
                            android:maxLength="2"
                            android:id="@+id/tvAgeDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="tuổi"
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_20ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:src="@drawable/ic_round_location_on_24"
                            android:tint="@color/black_dor" />

                        <TextView
                            android:id="@+id/tvAddressDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:text="Cơ sở Hà Nội"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoe_ui"
                            android:text="Giới thiệu: "
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/tvDesDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yêu màu hồng, ghét sự giả dối"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/_15ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoe_ui"
                            android:text="Giới tính: "
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/tvSexDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nam"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/_15ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoe_ui"
                            android:text="Ngành học: "
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/tvSpecializedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lập trình Mobile"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/_15ssp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoe_ui"
                            android:text="Khóa học: "
                            android:textColor="@color/black_dor"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/tvCourseDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.3"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Sở thích: "
                        android:textColor="@color/black_dor"
                        android:textSize="@dimen/_17ssp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcyInterestDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15ssp"
                        android:gravity="center_horizontal|center_vertical" />

                    <Button
                        android:id="@+id/btnReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/cus_btn5"
                        android:backgroundTint="@null"
                        android:text="Báo cáo"
                        app:backgroundTint="@null" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>