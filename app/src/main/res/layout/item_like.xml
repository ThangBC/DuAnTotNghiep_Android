<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="192dp"
            android:layout_height="240dp"
            android:id="@+id/imgLikeFrgLike"
            android:scaleType="centerCrop"
            android:src="@drawable/quan"
            app:riv_corner_radius="20dp" />
        <TextView
            android:layout_gravity="left"
            android:layout_marginTop="-110dp"
            android:gravity="center"
            android:id="@+id/tvNameFrgLike"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/cus_bg"
            android:text="NNNNNNNNNNN"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_marginTop="-50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgbtnDislikeFrgLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/cus_img2"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_close_24" />

            <ImageView
                android:id="@+id/imgbtnLikeFrgLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cus_img3"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_favorite_24" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>