<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_13sdp"
    android:background="@drawable/corner_dialog_logout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_dialog_title_logout"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Hiển thị những người có cùng sở thích với bạn"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_13sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Tắt"
            android:textSize="@dimen/_20ssp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swtInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Bật"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_13sdp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/cus_btn8"
            android:backgroundTint="@null"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/cus_btn7"
            android:text="Xác nhận"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="#f58114" />
    </LinearLayout>

</LinearLayout>