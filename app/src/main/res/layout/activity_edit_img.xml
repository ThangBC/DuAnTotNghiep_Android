                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_105sdp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/editimg6"
                        android:layout_width="match_parent"
