<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SettingActivity">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:gravity="center_horizontal"
        android:text="Thiết lập"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />


    <TextView
        android:id="@+id/tvDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:textColor="#FF3D00"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center_horizontal"
                android:text="Khám phá"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.262" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="334dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/cus_setting"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.498">

                <LinearLayout
                    android:id="@+id/btnShowSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#F6DB7F"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:gravity="center"
                        android:text="Hiển thị tôi"
                        android:textAllCaps="false"
                        android:textColor="#707070"
                        android:textSize="20dp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/tvShowSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="Mọi người"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5A343" />

                <LinearLayout
                    android:id="@+id/btnAddressSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#F6DB7F"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="Cơ sở"
                        android:textAllCaps="false"
                        android:textColor="#707070"
                        android:textSize="20dp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/tvAddressSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="Tất cả cơ sở"
                        android:textSize="20dp" />
                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5A343" />

                <LinearLayout
                    android:id="@+id/btnMajorSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#F6DB7F"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:gravity="center"
                        android:text="Ngành học"
                        android:textAllCaps="false"
                        android:textColor="#707070"
                        android:textSize="20dp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:layout_gravity="center"

                        android:layout_weight="1"
                        android:id="@+id/tvMajorSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="Tất cả ngành học"
                        android:textSize="20dp"
                         />
                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5A343" />

                <LinearLayout
                    android:id="@+id/btnShowCourseSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#F6DB7F"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:gravity="center"
                        android:text="Khóa học"
                        android:textAllCaps="false"
                        android:textColor="#707070"
                        android:textSize="20dp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:layout_gravity="center"

                        android:layout_weight="1"
                        android:id="@+id/tvShowCourseSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="Tất cả khóa học"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5A343" />

                <LinearLayout
                    android:id="@+id/btnInterestSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#F6DB7F"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:gravity="center"
                        android:text="Sở thích"
                        android:textAllCaps="false"
                        android:textColor="#707070"
                        android:textSize="20dp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/tvFilterInterest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="Bật"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center_horizontal"
                android:text="Liên hệ"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.741" />

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/cus_setting"
                android:backgroundTint="@null"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="start|center_vertical"
                android:text="Trợ giúp và hỗ trợ"
                android:textAllCaps="false"
                android:textColor="#707070"
                android:textSize="20dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnChangePassW"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/cus_btn4"
                android:backgroundTint="@null"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cài đặt mặt khẩu"
                android:textAllCaps="false"
                android:textColor="#303030"
                android:textSize="20dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/cus_btn4"
                android:backgroundTint="@null"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Đăng xuất"
                android:textAllCaps="false"
                android:textColor="#303030"
                android:textSize="20dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnDeleteAccout"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/cus_btn4"
                android:backgroundTint="@null"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Xóa tài khoản"
                android:textAllCaps="false"
                android:textColor="#303030"
                android:textSize="20dp"
                app:backgroundTint="@null" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

