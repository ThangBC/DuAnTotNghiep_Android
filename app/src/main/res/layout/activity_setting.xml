<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:paddingStart="@dimen/_16sdp"
    android:paddingTop="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Xong"
            android:textColor="#FF3D00"
            android:textSize="@dimen/_17ssp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal"
            android:text="Thiết lập"
            android:textAlignment="center"
            android:textSize="@dimen/_30ssp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center_horizontal"
                    android:text="Khám phá"
                    android:textSize="@dimen/_19ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_274sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/cus_setting"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/btnShowSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6DB7F"
                            android:backgroundTint="@null"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:gravity="left|center"
                            android:text="Hiển thị tôi"
                            android:textAllCaps="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_15sdp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/tvShowSetting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="Mọi người"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F5A343" />

                    <LinearLayout
                        android:id="@+id/btnAddressSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6DB7F"
                            android:backgroundTint="@null"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:gravity="left|center"

                            android:text="Cơ sở"
                            android:textAllCaps="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_15sdp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/tvAddressSetting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="Tất cả cơ sở"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>


                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F5A343" />

                    <LinearLayout
                        android:id="@+id/btnMajorSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6DB7F"
                            android:backgroundTint="@null"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:gravity="left|center"
                            android:text="Ngành học"
                            android:textAllCaps="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_15sdp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/tvMajorSetting"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="Tất cả ngành học"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F5A343" />

                    <LinearLayout
                        android:id="@+id/btnShowCourseSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6DB7F"
                            android:backgroundTint="@null"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:gravity="left|center"

                            android:text="Khóa học"
                            android:textAllCaps="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_15sdp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/tvShowCourseSetting"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="Tất cả khóa học"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F5A343" />

                    <LinearLayout
                        android:id="@+id/btnInterestSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F6DB7F"
                            android:backgroundTint="@null"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:gravity="left|center"
                            android:text="Sở thích"
                            android:textAllCaps="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_15sdp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/tvFilterInterest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="Bật"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center_horizontal"
                    android:text="Liên hệ"
                    android:textSize="@dimen/_19ssp" />

                <Button
                    android:id="@+id/btnSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/cus_setting"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="start|center_vertical"
                    android:text="Chính sách và hỗ trợ"
                    android:textAllCaps="false"
                    android:textColor="#707070"
                    android:textSize="@dimen/_15ssp"
                    app:backgroundTint="@null" />

                <Button

                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:background="@drawable/cus_btn4"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Đăng xuất"
                    android:textAllCaps="false"
                    android:textColor="#303030"
                    android:textSize="@dimen/_15ssp"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/btnDeleteAccout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/cus_btn4"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Xóa tài khoản"
                    android:textAllCaps="false"
                    android:textColor="#303030"
                    android:textSize="@dimen/_15ssp"
                    app:backgroundTint="@null" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>

