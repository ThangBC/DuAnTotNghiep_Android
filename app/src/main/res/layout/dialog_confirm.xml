<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_13sdp"
    android:background="@drawable/corner_dialog_logout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_dialog_title_logout"
        android:gravity="center"
        android:padding="@dimen/_8ssp"
        android:text="Xóa"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBodyDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_6sdp"
        android:text="Bạn có chắc muốn xóa ?"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <Button
            android:id="@+id/btnCancelDeleteDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/cus_btn8"
            android:backgroundTint="@null"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnDeletetDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/cus_btn7"
            android:text="Có"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="#f58114" />
    </LinearLayout>

</LinearLayout>