<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginRight="-100dp"
                android:id="@+id/vLeftImg"
                android:layout_width="100dp"
                android:layout_height="350dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgUserFrgHome"
                app:riv_corner_radius="20dp"
                android:layout_width="350dp"
                android:layout_height="600dp"
                android:scaleType="centerCrop"
                android:transitionName="example_transition" />
            <View
                android:layout_marginLeft="-100dp"
                android:id="@+id/vRigthImg"
                android:layout_width="100dp"
                android:layout_height="350dp" />
            <TextView
                android:layout_marginLeft="-61dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:id="@+id/tvCoutImg"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:background="@drawable/cus_bg2"
                android:text="0/0"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-230dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvNameFrgHome"
                    android:layout_width="240dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cus_bg"
                    android:text="NNNNNNNNNNN"
                    android:textColor="@color/white"
                    android:textSize="25dp" />
                <ImageView
                    android:background="@drawable/cus_bg3"
                    android:id="@+id/imgUserDetailFrgHome"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_info_24_white"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvAgeFrgHome"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/cus_bg"
                android:gravity="center_vertical|center_horizontal"
                android:text="NN"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDislikeFrgHome"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/cus_img2"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_close_24" />

                <ImageView
                    android:id="@+id/imgLikeFrgHome"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/cus_img3"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_favorite_24" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>