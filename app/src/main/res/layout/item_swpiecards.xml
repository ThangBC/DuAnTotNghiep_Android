<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:padding="@dimen/_20sdp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vLeftImg"
                android:layout_width="@dimen/_54sdp"
                android:layout_height="@dimen/_270sdp"
                android:layout_gravity="left" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgUserFrgHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:transitionName="example_transition"
                app:riv_corner_radius="20dp" />

            <View
                android:id="@+id/vRigthImg"
                android:layout_width="70dp"
                android:layout_height="350dp"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/tvCoutImg"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="right"
                android:background="@drawable/cus_bg2"
                android:gravity="center"
                android:text="0/0"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNameFrgHome"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_gravity="left"
                        android:layout_marginRight="@dimen/_80sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/cus_bg"
                        android:gravity="center"
                        android:text="Họ và tên"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_19ssp" />

                    <ImageView
                        android:id="@+id/imgUserDetailFrgHome"

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/cus_bg3"
                        android:src="@drawable/ic_baseline_info_24_white" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tvAgeFrgHome"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="left"
                    android:background="@drawable/cus_bg"
                    android:gravity="center"
                    android:text="Tuổi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_19ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgDislikeFrgHome"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:background="@drawable/cus_img2"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_close_24" />

                    <ImageView
                        android:id="@+id/imgLikeFrgHome"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/cus_img3"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_favorite_24" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>