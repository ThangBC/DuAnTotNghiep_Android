<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:padding="@dimen/_16sdp"
    tools:context=".EditProActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Xong"
            android:textColor="#FF3D00"
            android:textSize="@dimen/_17ssp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal"
            android:text="Thông tin"
            android:textSize="@dimen/_30ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cus_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:padding="@dimen/_10sdp"
                    android:text="Giới thiệu: "
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/imgbtnEditDes"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/cus_img6"
                    android:backgroundTint="@null"
                    android:src="@drawable/ic_baseline_edit_24_orange"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/cus_input"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tvInterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Sở thích: "
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/imgbtnEditInterest"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/cus_img6"
                    android:backgroundTint="@null"
                    android:src="@drawable/ic_baseline_edit_24_orange"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/cus_input"
                    android:ellipsize="end"
                    android:ems="10"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Giới tính: "
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/cus_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Cơ sở: "
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/imgbtnEditAddress"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/cus_img6"
                    android:backgroundTint="@null"
                    android:src="@drawable/ic_baseline_edit_24_orange"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/cus_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSpecialized"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Ngành học: "
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/imgbtnEditSpecialized"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/cus_img6"
                    android:backgroundTint="@null"
                    android:src="@drawable/ic_baseline_edit_24_orange"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/cus_input"
                    android:ellipsize="end"
                    android:ems="10"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Khóa học: "
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>