<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/corner_dialog_logout"
    android:layout_margin="16dp">

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/corner_dialog_title_logout"
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt" />

    <CheckBox
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ckbTapped"
        android:gravity="center"
        android:textSize="20dp"
        android:elevation="2dp"
        android:background="@drawable/cus_btn_sex"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:button="@null"
        android:id="@+id/ckbDuLichEdit"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:text="Du lịch" />

    <CheckBox
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ckbTapped"
        android:gravity="center"
        android:textSize="20dp"
        android:elevation="2dp"
        android:background="@drawable/cus_btn_sex"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:button="@null"
        android:id="@+id/ckbChoiGameEdit"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:text="Chơi game" />

    <CheckBox
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ckbTapped"
        android:gravity="center"
        android:textSize="20dp"
        android:elevation="2dp"
        android:background="@drawable/cus_btn_sex"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:button="@null"
        android:id="@+id/ckbDocSachEdit"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:text="Đọc sách"
/>

    <CheckBox
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ckbTapped"
        android:gravity="center"
        android:textSize="20dp"
        android:elevation="2dp"
        android:background="@drawable/cus_btn_sex"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:button="@null"
        android:id="@+id/ckbMuaSamEdit"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:text="Mua sắm" />


    <LinearLayout
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:textSize="16dp"
            android:background="@drawable/cus_btn8"
            android:alpha="0.2"
            android:layout_marginEnd="10dp"
            android:id="@+id/btnCancelSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_marginRight="10dp" />

        <Button
            android:textSize="16dp"
            app:backgroundTint="#f58114"
            android:background="@drawable/cus_btn7"
            android:id="@+id/btnConfirmSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Có" />
    </LinearLayout>

</LinearLayout>