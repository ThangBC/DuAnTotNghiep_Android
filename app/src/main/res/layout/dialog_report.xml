<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_margin="30dp"
        android:padding="10dp"
        android:background="@drawable/cus_dialog_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="30dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/tvCustomersUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Báo cáo" />

        <TextView
            android:textSize="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thị Duyên sẽ không biết bạn báo cáo" />

        <Button
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/cus_btn6"
            android:id="@+id/btnRp1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tài khoản giả mạo" />

        <Button
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/cus_btn6"
            android:id="@+id/btnRp2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ngôn từ gây thù ghét" />

        <Button
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/cus_btn6"
            android:id="@+id/btnRp3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tiểu sử không hợp lệ" />

        <Button
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/cus_btn6"
            android:id="@+id/btnRp4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Âm mưu phản động" />

        <Button
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/cus_btn6"
            android:id="@+id/btnRp5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ảnh hồ sơ không phù hợp" />

    </LinearLayout>

</LinearLayout>